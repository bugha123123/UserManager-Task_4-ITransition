@using Task_4.DTO
@model signupDTO
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

<div class="min-h-screen flex flex-col md:flex-row">
    <!-- Left side - Form -->
    <div class="w-full md:w-1/2 flex items-center justify-center p-4 md:p-12">
        <div class="w-full max-w-md animate-fade-in">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Create your account</h1>
                <p class="mt-2 text-gray-600">Join thousands of users today</p>
            </div>

            <form id="signupForm" class="space-y-6 animate-slide-up" asp-action="signup" asp-controller="Auth" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="mb-4 p-4 rounded bg-red-100 text-red-800 border border-red-300">
                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@modelError.ErrorMessage</div>
                        }
                    </div>
                }

                <!-- Email -->
                <div class="space-y-2">
                    <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                    <div class="relative">
                        <input type="email"
                               id="email"
                               asp-for="Email"
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200"
                               placeholder="you@example.com"
                               required />
                        <div id="emailError" class="hidden text-sm text-red-500 mt-1 absolute -bottom-6 left-0"></div>
                    </div>
                </div>

                <!-- Password -->
                <div class="space-y-2">
                    <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                    <div class="relative">
                        <input type="password"
                               id="password"
                               asp-for="Password"
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200 pr-10"
                               placeholder="••••••••"
                               required />
                        <button type="button"
                                id="togglePassword"
                                class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600"
                                aria-label="Toggle password visibility">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        </button>
                        <div id="passwordError" class="hidden text-sm text-red-500 mt-1 absolute -bottom-6 left-0"></div>
                    </div>
                </div>

                <!-- Confirm Password -->
                <div class="space-y-2">
                    <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <div class="relative">
                        <input type="password"
                               id="confirmPassword"
                               asp-for="ConfirmPassword"
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200"
                               placeholder="••••••••"
                               required />
                        <div id="confirmPasswordError" class="hidden text-sm text-red-500 mt-1 absolute -bottom-6 left-0"></div>
                    </div>
                </div>

                <!-- Terms -->
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input id="terms"
                               name="terms"
                               type="checkbox"
                               class="w-4 h-4 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200"
                               required />
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="terms" class="text-gray-600">
                            I agree to the <a href="#" class="text-blue-600 hover:text-blue-700">Terms of Service</a> and <a href="#" class="text-blue-600 hover:text-blue-700">Privacy Policy</a>
                        </label>
                        <div id="termsError" class="hidden text-sm text-red-500 mt-1"></div>
                    </div>
                </div>

                <!-- Submit -->
                <div>
                    <button type="submit"
                            class="w-full py-3 px-4 rounded-lg bg-blue-600 text-white font-medium transition-all duration-200 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        Create Account
                    </button>
                </div>
            </form>

            <!-- Already have an account -->
            <div class="mt-8 text-center">
                <p class="text-sm text-gray-600">
                    Already have an account?
                    <a asp-action="signin" asp-controller="Auth" class="font-medium text-blue-600 hover:text-blue-700 transition-colors duration-200">Sign in</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Right side - Welcome -->
    <div class="hidden md:block md:w-1/2 bg-gradient-to-br from-blue-500 to-indigo-700">
        <div class="flex flex-col justify-center items-center h-full text-white p-12">
            <div class="max-w-md text-center">
                <h2 class="text-3xl font-bold mb-4">Welcome to MyApp</h2>
                <p class="text-white/80 mb-6">Join our community and experience the best features we have to offer.</p>
                <div class="flex justify-center space-x-3">
                    <div class="w-3 h-3 rounded-full bg-white/30"></div>
                    <div class="w-3 h-3 rounded-full bg-white"></div>
                    <div class="w-3 h-3 rounded-full bg-white/30"></div>
                </div>
            </div>
        </div>
    </div>
</div>
