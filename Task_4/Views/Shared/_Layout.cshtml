<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task_4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Task_4.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

    <nav class="bg-white shadow-sm mb-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <!-- Left: Brand -->
                <div class="flex-shrink-0">
                    <a  class="text-xl font-semibold text-gray-800" asp-action="Index" asp-controller="Home">User Manager</a>
                </div>

                <!-- Right: Nav Items -->
                <div class="flex space-x-6 items-center">

                    <form asp-controller="Auth" asp-action="signout" method="post">
                        <button type="submit"
                                class="text-sm text-white bg-red-500 hover:bg-red-600 px-4 py-2 rounded transition duration-150">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>


    <!-- Existing content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS (if needed) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
